@model Product

@{
    ViewData["Title"] = "Update to Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group-inner">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="form-select-list">
                                <select class="form-control custom-select-value" asp-for="CategoryId">
                                    <option>--- Product Categories  * ---</option>
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="control-label"></label>
                    <input asp-for="Stock" value="@Model.Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-controller="Product" asp-action="Index" class="btn btn-dark">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>