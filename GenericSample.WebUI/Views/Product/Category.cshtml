@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product List by Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>@ViewData["Title"]</h4>
        <hr />
        <p>
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm">+ Add A New Product</a>
        </p>
        <div class="col-md-10">
            <table class="table">
                <thead class="table table-hover">
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Product Category
                        </th>
                        <th>
                            Stock
                        </th>
                        <th>
                            Product Price
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Category.Name
                            </td>
                            <td>
                                @item.Stock
                            </td>
                            <td>
                                @item.Price.ToString()
                            </td>
                            <td>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a> |
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>