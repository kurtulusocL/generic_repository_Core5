@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>@ViewData["Title"]</h4>
        <hr />
        <p>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary btn-sm">+ Add A New Category</a>
        </p>
        <div class="col-md-10">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Products
                        </th>
                        <th>
                            Operations
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <span>@item.Products.Count() product</span>
                            </td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a> |
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>